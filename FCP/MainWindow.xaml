<Window x:Class="FCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCP"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Consolas"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="FCP"
        Height="600"
        Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <RoutedUICommand x:Key="OPD"/>
            <RoutedUICommand x:Key="Stop"/>
            <RoutedUICommand x:Key="Save"/>
            <RoutedUICommand x:Key="Exit"/>
            <RoutedUICommand x:Key="UD"/>
            <RoutedUICommand x:Key="InputPath1"/>
            <RoutedUICommand x:Key="InputPath2"/>
            <RoutedUICommand x:Key="InputPath3"/>
            <RoutedUICommand x:Key="OutputPath"/>
            <RoutedUICommand x:Key="ChangeSize"/>
            <RoutedUICommand x:Key="AdvancedSettings"/>
            <RoutedUICommand x:Key="ClearListBox"/>
            <RoutedUICommand x:Key="Log"/>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Gesture="F5" Command="{StaticResource OPD}"/>
        <KeyBinding Gesture="F7" Command="{StaticResource Stop}"/>
        <KeyBinding Gesture="Ctrl+S" Command="{StaticResource Save}"/>
        <KeyBinding Gesture="Escape" Command="{StaticResource Exit}"/>
        <KeyBinding Gesture="F6" Command="{StaticResource UD}"/>
        <KeyBinding Gesture="Ctrl+1" Command="{StaticResource InputPath1}"/>
        <KeyBinding Gesture="Ctrl+2" Command="{StaticResource InputPath2}"/>
        <KeyBinding Gesture="Ctrl+3" Command="{StaticResource InputPath3}"/>
        <KeyBinding Gesture="Ctrl+4" Command="{StaticResource OutputPath}"/>
        <KeyBinding Gesture="Ctrl+G" Command="{StaticResource ChangeSize}"/>
        <KeyBinding Gesture="Ctrl+W" Command="{StaticResource AdvancedSettings}"/>
        <KeyBinding Gesture="Ctrl+E" Command="{StaticResource ClearListBox}"/>
        <KeyBinding Gesture="F1" Command="{StaticResource Log}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource OPD}" CanExecute="OPD_CanExecute" Executed="OPD_Executed"/>
        <CommandBinding Command="{StaticResource Stop}" CanExecute="Stop_CanExecute" Executed="Stop_Executed"/>
        <CommandBinding Command="{StaticResource Save}" CanExecute="Save_CanExecute" Executed="Save_Executed"/>
        <CommandBinding Command="{StaticResource Exit}" Executed="Exit_Executed"/>
        <CommandBinding Command="{StaticResource UD}" CanExecute="UD_CanExecute" Executed="UD_Executed"/>
        <CommandBinding Command="{StaticResource InputPath1}" CanExecute="InputPath1_CanExecute" Executed="InputPath1_Executed"/>
        <CommandBinding Command="{StaticResource InputPath2}" CanExecute="InputPath2_CanExecute" Executed="InputPath2_Executed"/>
        <CommandBinding Command="{StaticResource InputPath3}" CanExecute="InputPath3_CanExecute" Executed="InputPath3_Executed"/>
        <CommandBinding Command="{StaticResource OutputPath}" CanExecute="OutputPath_CanExecute" Executed="OutputPath_Executed"/>
        <CommandBinding Command="{StaticResource ChangeSize}" CanExecute="ChangeSize_CanExecute" Executed="ChangeSize_Executed"/>
        <CommandBinding Command="{StaticResource AdvancedSettings}" CanExecute="AdvancedSettings_CanExecute" Executed="AdvancedSettings_Executed"/>
        <CommandBinding Command="{StaticResource ClearListBox}" Executed="ClearListBox_Executed"/>
        <CommandBinding Command="{StaticResource Log}" Executed="Log_Executed"/>
    </Window.CommandBindings>
    <Border BorderBrush="{StaticResource DeepBlue}" BorderThickness="2">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3694E4"/>
                    <GradientStop Color="#FF155385" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Gd_Title"
                  Background="Transparent"
                  MouseLeftButtonDown="Gd_Title_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Txtb_Title"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10"/>
                <Button x:Name="Btn_Minimum"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Click="Btn_Minimum_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize"
                                             Height="30"
                                             Width="30"
                                             Margin="-14 -3 -10 11"/>
                </Button>
                <Button x:Name="Btn_Close"
                        Grid.Column="3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Click="Btn_Close_Click">
                    <materialDesign:PackIcon Kind="WindowClose"
                                             Height="30"
                                             Width="30"
                                             Margin="-14 -4 -10 0"/>
                </Button>
            </Grid>
            <Border Grid.Row="1" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.1*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Border x:Name="Bod_Path"
                                Padding="10"
                                Background="White"
                                CornerRadius="5 5 5 5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="0.4*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Txtb_InputPath1"
                                           Text="輸入路徑1"
                                           Foreground="{StaticResource DeepBlue}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           MouseRightButtonUp="Txtb_InputPath1_MouseRightButtonUp"/>
                                <TextBox x:Name="Txt_InputPath1"
                                         Grid.Column="2"
                                         Foreground="{StaticResource DeepBlue}"
                                         Height="35"
                                         VerticalAlignment="Center"
                                         FontSize="16"
                                         IsReadOnly="True"
                                         Opacity="0.6"
                                         Margin="0 8 0 0"/>
                                <Button x:Name="Btn_InputPath1"
                                        Grid.Column="4"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        BorderBrush="Transparent"
                                        Background="{StaticResource DeepBlue}"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Click="Btn_InputPath1_Click">
                                    <materialDesign:PackIcon Kind="Folder"
                                                             Height="25"
                                                             Width="25"
                                                             Margin="-12 -1 -10 0"/>
                                </Button>
                                <TextBlock x:Name="Txtb_InputPath2"
                                           Grid.Row="1"
                                           Text="輸入路徑2"
                                           Foreground="{StaticResource DeepBlue}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           MouseRightButtonUp="Txtb_InputPath2_MouseRightButtonUp"/>
                                <TextBox x:Name="Txt_InputPath2"
                                         Grid.Row="1"
                                         Grid.Column="2"
                                         Foreground="{StaticResource DeepBlue}"
                                         Height="35"
                                         VerticalAlignment="Center"
                                         FontSize="16"
                                         IsReadOnly="True"
                                         Opacity="0.6"
                                         Margin="0 8 0 0"/>
                                <Button x:Name="Btn_InputPath2"
                                        Grid.Row="1"
                                        Grid.Column="4"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        BorderBrush="Transparent"
                                        Background="{StaticResource DeepBlue}"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Click="Btn_InputPath2_Click">
                                    <materialDesign:PackIcon Kind="Folder"
                                                             Height="25"
                                                             Width="25"
                                                             Margin="-12 -1 -10 0"/>
                                </Button>
                                <TextBlock x:Name="Txtb_InputPath3"
                                           Grid.Row="2"
                                           Text="輸入路徑3"
                                           Foreground="{StaticResource DeepBlue}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           MouseRightButtonUp="Txtb_InputPath3_MouseRightButtonUp"/>
                                <TextBox x:Name="Txt_InputPath3"
                                         Grid.Row="2"
                                         Grid.Column="2"
                                         Foreground="{StaticResource DeepBlue}"
                                         Height="35"
                                         VerticalAlignment="Center"
                                         FontSize="16"
                                         IsReadOnly="True"
                                         Opacity="0.6"
                                         Margin="0 8 0 0"/>
                                <Button x:Name="Btn_InputPath3"
                                        Grid.Row="2"
                                        Grid.Column="4"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        BorderBrush="Transparent"
                                        Background="{StaticResource DeepBlue}"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                    Click="Btn_InputPath3_Click">
                                    <materialDesign:PackIcon Kind="Folder"
                                                             Height="25"
                                                             Width="25"
                                                             Margin="-12 -1 -10 0"/>
                                </Button>
                                <TextBlock x:Name="Txtb_OutputPath"
                                           Grid.Row="3"
                                           Text="輸出路徑"
                                           Foreground="{StaticResource DeepBlue}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           MouseRightButtonDown="Txtb_OutputPath_MouseRightButtonDown"/>
                                <TextBox x:Name="Txt_OutputPath"
                                         Grid.Row="3"
                                         Grid.Column="2"
                                         Foreground="{StaticResource DeepBlue}"
                                         Height="35"
                                         VerticalAlignment="Center"
                                         FontSize="16"
                                         IsReadOnly="True"
                                         Opacity="0.6"
                                         Margin="0 8 0 0" />
                                <Button x:Name="Btn_OutputPath"
                                        Grid.Row="3"
                                        Grid.Column="4"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        BorderBrush="Transparent"
                                        Background="{StaticResource DeepBlue}"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Click="Btn_OutputPath_Click">
                                    <materialDesign:PackIcon Kind="Folder"
                                                             Height="25"
                                                             Width="25"
                                                             Margin="-12 -1 -10 0"/>
                                </Button>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2">
                            <Grid x:Name="Gd_Feature">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Margin="0 5 0 5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2.3*"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="Tgl_AutoStart"
                                                      HorizontalAlignment="Left"
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      Margin="5 0 0 0">
                                        </ToggleButton>
                                        <Border Grid.Column="1"
                                                CornerRadius="0 6 6 0"
                                                Background="{StaticResource DeepBlue}"
                                                HorizontalAlignment="Stretch"
                                                Margin="3 3 3 3">
                                            <TextBlock Text="自動開始"
                                                       FontSize="18"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="130"
                                        Height="43"
                                        HorizontalAlignment="Center"
                                        Margin="-115 5 0 5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="1.4*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="20"
                                                   Foreground="{StaticResource DeepBlue}"
                                                   Text="包藥"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Column="1"
                                                CornerRadius="0 6 6 0"
                                                Background="{StaticResource DeepBlue}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 3.2 3 3">
                                            <TextBlock x:Name="Txtb_PackType"
                                                       FontSize="20"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" 
                                                       Text="餐包"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.RowSpan="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Margin="0 5 0 5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="1.2*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock FontSize="30"
                                                   Foreground="{StaticResource DeepBlue}"
                                                   Text="成 功"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Row="1"
                                                CornerRadius="0 0 6 6"
                                                Background="{StaticResource DeepBlue}"
                                                HorizontalAlignment="Stretch"
                                                Margin="3 0 3 3">
                                            <TextBlock x:Name="Txtb_Success"
                                                       FontSize="30"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="0"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.RowSpan="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Margin="130 5 0 5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="1.2*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock FontSize="30"
                                                   Foreground="{StaticResource DeepBlue}"
                                                   Text="失 敗"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Row="1"
                                                CornerRadius="0 0 6 6"
                                                Background="{StaticResource DeepBlue}"
                                                Margin="3 0 3 3"
                                                HorizontalAlignment="Stretch">
                                            <TextBlock x:Name="Txtb_Fail"
                                                       FontSize="30"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="0"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border x:Name="Bod_X"
                                        Grid.Row="5"
                                        Grid.RowSpan="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="120"
                                        Height="43"
                                        HorizontalAlignment="Left"
                                        Margin="0 5 0 5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.1*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="20"
                                                   Foreground="{StaticResource DeepBlue}"
                                                   Text="X軸"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Column="1"
                                                CornerRadius="0 6 6 0"
                                                Background="{StaticResource DeepBlue}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 3.2 3 3">
                                            <TextBox x:Name="Txt_X"
                                                     FontSize="20"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="0"
                                                     MaxLength="4"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border x:Name="Bod_Y"
                                        Grid.Row="5"
                                        Grid.RowSpan="2"
                                        CornerRadius="8 8 8 8"
                                        Background="White"
                                        Width="120"
                                        Height="43" 
                                        HorizontalAlignment="Left"
                                        Margin="130 5 0 5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.1*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="20"
                                                   Foreground="{StaticResource DeepBlue}"
                                                   Text="Y軸"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Column="1"
                                                CornerRadius="0 6 6 0"
                                                Background="{StaticResource DeepBlue}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0 3.2 3 3">
                                            <TextBox x:Name="Txt_Y"
                                                     FontSize="20"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="0"
                                                     MaxLength="4"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="Btn_OPD"
                                        Background="White"
                                        Foreground="{StaticResource DeepBlue}"
                                        BorderBrush="Transparent"
                                        FontSize="20"
                                        Width="120"
                                        Height="Auto"
                                        HorizontalAlignment="Left"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        Click="Btn_OPD_Click"
                                        Style="{StaticResource ControlButton}"
                                        Margin="0 5 0 5">
                                        <Grid Width="110" Margin="-10 0 0 0">
                                            <materialDesign:PackIcon Kind="Play"
                                                                     Height="30"
                                                                     Width="30"
                                                                     Margin="0 -2 0 0"/>
                                            <TextBlock x:Name="Txtb_OPD"
                                                   FontSize="20" 
                                                   Text="開始F5"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="10 1 0 0"/>
                                        </Grid>
                                    </Button>
                                    <ToggleButton x:Name="Tgl_OPD1"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Left"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10 0 0 0">
                                    </ToggleButton>
                                    <TextBlock x:Name="Txt_OPD1"
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16"
                                               Text="門診"
                                               Margin="50 0 0 0"/>
                                    <ToggleButton x:Name="Tgl_OPD2"
                                                  Grid.Column="2"
                                                  HorizontalAlignment="Left"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10 0 0 0">
                                    </ToggleButton>
                                    <TextBlock x:Name="Txt_OPD2"
                                               Grid.Column="2"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16"
                                               Text="磨粉"
                                               Margin="50 0 0 0"/>
                                    <ToggleButton x:Name="Tgl_OPD3"
                                                  Grid.Column="3"
                                                  HorizontalAlignment="Left"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10 0 0 0">
                                    </ToggleButton>
                                    <TextBlock x:Name="Txt_OPD3"
                                               Grid.Column="3"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16"
                                               Text="養護"
                                               Margin="50 0 0 0"/>
                                    <ToggleButton x:Name="Tgl_OPD4"
                                                  Grid.Column="4"
                                                  HorizontalAlignment="Left"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10 0 0 0">
                                    </ToggleButton>
                                    <TextBlock x:Name="Txt_OPD4"
                                               Grid.Column="4"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16"
                                               Text="其他"
                                               Margin="50 0 0 0"/>
                                </Grid>
                                <Button x:Name="Btn_UD"
                                        Grid.Row="1"
                                        Background="White"
                                        Foreground="{StaticResource DeepBlue}"
                                        BorderBrush="Transparent"
                                        FontSize="20"
                                        Width="120"
                                        Height="Auto"
                                        HorizontalAlignment="Left"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        Click="Btn_UD_Click"
                                        Style="{StaticResource ControlButton}"
                                        Margin="0 5 0 5">
                                    <Grid Width="110" Margin="-10 0 0 0">
                                        <materialDesign:PackIcon Kind="Bed"
                                                                 Height="30"
                                                                 Width="30"
                                                                 Margin="0 -2 0 0"/>
                                        <TextBlock FontSize="20"
                                                   Text="住院F6"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="10 1 0 0"/>
                                    </Grid>
                                </Button>
                                <RadioButton x:Name="Rdo_Stat"
                                             Grid.Row="1"
                                             HorizontalAlignment="Center"
                                             FontSize="20"
                                             Foreground="White"
                                             Content=" 即時"
                                             IsChecked="True"
                                             Style="{StaticResource RadioButton}"
                                             Margin="-170 0 0 0"/>
                                <RadioButton x:Name="Rdo_Batch"
                                             Grid.Row="1"
                                             HorizontalAlignment="Center"
                                             FontSize="20"
                                             Foreground="White"
                                             Content=" 長期"
                                             Style="{StaticResource RadioButton}"
                                             Margin="20 0 0 0"/>
                                <Button x:Name="Btn_Stop"
                                        Grid.Row="2"
                                        Background="White"
                                        Foreground="{StaticResource DeepBlue}"
                                        BorderBrush="Transparent"
                                        FontSize="20"
                                        Width="170"
                                        Height="Auto"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        Click="Btn_Stop_Click"
                                        Margin="0 5 0 5">
                                    <Grid Width="130">
                                        <materialDesign:PackIcon Kind="Stop"
                                                                 Height="30"
                                                                 Width="30"
                                                                 Margin="-10 -2 0 0"/>
                                        <TextBlock FontSize="20"
                                                   Text="停止轉檔F7"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="20 1 0 0"/>
                                    </Grid>
                                </Button>
                                <Button x:Name="Btn_Save"
                                        Grid.Row="3"
                                        Background="White"
                                        Foreground="{StaticResource DeepBlue}"
                                        BorderBrush="Transparent"
                                        FontSize="20"
                                        Width="170"
                                        Height="Auto"
                                        HorizontalAlignment="Right"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                        Click="Btn_Save_Click"
                                        Margin="0 5 0 5">
                                    <Grid Width="130">
                                        <materialDesign:PackIcon Kind="ContentSaveEdit"
                                                                 Height="30"
                                                                 Width="30"
                                                                 Margin="-10 -2 0 0"/>
                                        <TextBlock FontSize="20"
                                                   Text="儲存Ctrl+S"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="20 1 0 0"/>
                                    </Grid>
                                </Button>
                                <Button x:Name="Btn_Exit"
                                        Grid.Row="4"
                                        Background="White"
                                        Foreground="{StaticResource DeepBlue}"
                                        BorderBrush="Transparent" FontSize="20"
                                        Width="170"
                                        Height="Auto"
                                        Margin="0 5 0 5"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        Click="Btn_Close_Click">
                                    <Grid Width="130">
                                        <materialDesign:PackIcon Kind="ExitToApp"
                                                                 Height="30"
                                                                 Width="30"
                                                                 Margin="-10 -2 0 0"/>
                                        <TextBlock FontSize="20"
                                                   Text="離開Esc"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="20 1 0 0"/>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                    <TextBox x:Name="Txt_ProgressBox"
                             Grid.Column="2"
                             FontSize="16"
                             Foreground="{StaticResource DeepBlue}"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             Cursor="Arrow">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button x:Name="Btn_ProgressBoxClear"
                            Grid.Column="2"
                            Width="30"
                            Height="30"
                            Foreground="{StaticResource DeepBlue}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            HorizontalAlignment="Right"
